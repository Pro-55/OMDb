<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="16dp"
	android:padding="4dp"
	app:cardCornerRadius="8dp"
	tools:context=".detailsmodule.DetailsActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:orientation="vertical"
			android:padding="4dp">

			<LinearLayout
				android:id="@+id/idLlInformationParent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="4dp">

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="4dp"
					android:background="@color/colorWhite"
					app:cardCornerRadius="6dp">

					<androidx.appcompat.widget.AppCompatImageView
						android:id="@+id/idIvDetailsPoster"
						android:layout_width="150dp"
						android:layout_height="200dp"
						android:transitionName="@string/transition_string" />
				</androidx.cardview.widget.CardView>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorAccent"
						android:textSize="20sp"
						android:textStyle="bold" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsRated"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorAccent"
						android:textSize="16sp"
						android:visibility="gone" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsReleased"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorAccent"
						android:textSize="16sp"
						android:visibility="gone" />

					<RatingBar
						android:id="@+id/idRbMovieRatings"
						style="@style/Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:theme="@style/RatingBarTheme"
						android:visibility="gone" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsRuntime"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorDarkGray"
						android:textSize="16sp"
						android:visibility="gone" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsGenre"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorDarkGray"
						android:textSize="16sp"
						android:visibility="gone" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsLanguages"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorDarkGray"
						android:textSize="16sp"
						android:visibility="gone" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTvDetailsCountries"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:textColor="@color/colorDarkGray"
						android:textSize="16sp"
						android:visibility="gone" />

				</LinearLayout>

			</LinearLayout>

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/idTvDetailsActors"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:gravity="center"
				android:textColor="@color/colorDarkGray"
				android:textSize="16sp"
				android:visibility="gone" />

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/idTvDetailsPlot"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:background="@drawable/drawable_border"
				android:padding="8dp"
				android:textColor="@color/colorAccent"
				android:textSize="18sp"
				android:visibility="gone" />

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/idTvDetailsAwards"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:gravity="center"
				android:textColor="@color/colorYellow"
				android:textSize="16sp"
				android:visibility="gone" />

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/idRvMoreRatings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:background="@drawable/drawable_border"
				android:padding="4dp"
				android:visibility="gone" />

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/idTvDetailsProduction"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="4dp"
				android:layout_marginTop="20dp"
				android:layout_marginEnd="4dp"
				android:layout_marginBottom="4dp"
				android:textColor="@color/colorDarkGray"
				android:textSize="16sp"
				android:visibility="gone" />
		</LinearLayout>
	</ScrollView>

</androidx.cardview.widget.CardView>